{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": ""
        },
        "storageName": {
            "type": "string",
            "defaultValue": ""
        },
        "endpointUri" :{
            "type": "string",
            "defaultValue": ""
        },
        "endpointAction" :{
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "location": "eastus",
        "scope":"[resourceGroup().id]",
        "Owner": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '8e3af657-a8ff-443c-a75c-2fe8c4bcb635')]",
        "DeploymentName" : "deployfunction"
    },
    "resources": [
        {
            "apiVersion": "2016-07-01",
            "name": "[variables('DeploymentName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name" : {
                        "value": "[parameters(name)]"
                    },
                    "storageName" : {
                        "value": "[parameters(storageName)]"
                    }
                }
            }
        },
        {
            "apiVersion": "2018-08-14-preview",
            "type": "Microsoft.CustomProviders/resourceProviders",
            "name":"actionsrp",
            "location":"East US",
            "properties" :{
                          "actions": [
                            {
                              "name": "[parameters(endpointAction)]",
                              "endpoints": [
                                {
                                  "enabled": true,
                                  "apiVersion": "2018-08-14-preview",
                                  "endpointUri": "[parameters(endpointUri)]",
                                  "timeout": "PT1M"
                                }
                              ]
                 
                            }
                          ]
                        }
                
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2017-09-01",
            "name": "1cfbba43-c0a6-48cd-b7f7-b7f07b38429c",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', variables('DeploymentName'))]"
            ],
            "properties": {
              "roleDefinitionId": "[variables('Owner')]",
              "principalId": "[reference(variables('DeploymentName')).outputs.principalId.value]",
              "scope": "[variables('scope')]"
            }
        }
    ]
}